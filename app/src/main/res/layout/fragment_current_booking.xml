<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CurrentBookingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/golden_color"
                android:layout_height="60dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:text="@string/current_bookings"
                    android:gravity="center"
                    android:textColor="@color/white_color"
                    android:textSize="16sp"/>






            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:background="@color/blue_back_color"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/blue_color"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_centerVertical="true"
                    android:text="@string/your_reservation_pendding_approval"/>

            </RelativeLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:elevation="4dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:layout_height="170dp">


                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textColor="@color/golden_color"
                        android:text="KOTO"/>


                    <ImageView
                        android:id="@+id/img_del"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/delete_90"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"/>

                    <ImageView
                        android:id="@+id/img_userName"
                        android:layout_below="@+id/txt_Name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/name_90"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="20dp"
                        />

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_toRightOf="@id/img_userName"
                        android:layout_below="@id/txt_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black_color"
                        android:text="Pending to be see"/>

                    <ImageView
                        android:id="@+id/img_Location"
                        android:layout_below="@+id/img_userName"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_90"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="20dp"
                        />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_toRightOf="@id/img_Location"
                        android:layout_below="@id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black_color"
                        android:text="6 Tsar Kaloyan Str,Sofia,Bulgaria"/>



                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/txt_location"
                        android:background="@color/grey_color">
                    </View>


                    <LinearLayout
                        android:layout_below="@id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/img_date"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/cale_90"/>

                            <TextView
                                android:id="@+id/txt_date"
                                android:layout_toRightOf="@id/img_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/grey_color"
                                android:text="11.02.2020"/>

                        </RelativeLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="1dp"
                            android:layout_height="60dp"
                            android:background="@color/grey_color">
                        </View>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/img_work"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/work_90"/>

                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_toRightOf="@id/img_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/grey_color"
                                android:text="12:20"/>

                        </RelativeLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="1dp"
                            android:layout_height="60dp"
                            android:background="@color/grey_color">
                        </View>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/img_tableNumber"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/number_90"/>

                            <TextView
                                android:id="@+id/txt_tableNumber"
                                android:layout_toRightOf="@id/img_tableNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/grey_color"
                                android:text="Table Number:"/>

                        </RelativeLayout>


                    </LinearLayout>






                </RelativeLayout>









            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>