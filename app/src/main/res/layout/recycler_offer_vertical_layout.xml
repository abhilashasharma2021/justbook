<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_below="@+id/card"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="270dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_food"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                android:src="@drawable/circle_dish">

            </de.hdodenhof.circleimageview.CircleImageView>



            <TextView
                android:id="@+id/txt_foodName"
                android:layout_toRightOf="@id/profile_food"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Planet Sofia"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_disPercent"
                android:layout_toRightOf="@id/profile_food"
                android:layout_below="@id/txt_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="20%"
                android:layout_marginStart="10dp"
                android:textColor="@color/grey_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_disper"
                android:layout_toRightOf="@id/txt_disPercent"
                android:layout_below="@id/txt_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/discount_from_final_bill"
                android:textColor="@color/grey_color"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txt_disPercenttime"
                android:layout_toRightOf="@id/txt_disper"
                android:layout_below="@id/txt_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text=" 17:00 to 21:00"
                android:textColor="@color/grey_color"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/txt_discountPercent"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="-20% "
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/golden_half_circle"
                android:textColor="@color/white_color"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/profile_food"
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/food" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:padding="16dp"
                    android:src="@drawable/share_90" />



                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/take_advantages_offer_reservation"
                    android:textColor="@color/white_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_below="@id/txt_1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/reserve"
                    android:background="@drawable/white_rect_corner"
                    android:gravity="center"
                    android:textColor="@color/white_color"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
