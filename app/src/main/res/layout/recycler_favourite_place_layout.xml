<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/rl_new1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/rl_header"
        android:elevation="4dp">




        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mic"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KOTO"
                        android:textSize="16sp"
                        android:textColor="@color/golden_color"
                        android:fontFamily="@font/lato_bold"/>
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/img_location"
                        android:layout_below="@id/txt_name"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/location_90"/>

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_name"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="-2dp"
                        android:layout_toRightOf="@id/img_location"
                        android:fontFamily="@font/roboto_regular"
                        android:text="6 Tsar Kaloyan str,Sofua"
                        android:textSize="14sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_del"
                        android:layout_width="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/delete_90"/>


                    <androidx.appcompat.widget.AppCompatRatingBar
                        style="?attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:layout_marginEnd="15dp"
                        android:numStars="5"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:saveEnabled="true"
                        android:theme="@style/RatingBar" />

                </RelativeLayout>


            </LinearLayout>
            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll"
                android:background="@color/grey_color">
            </View>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/v"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="30dp">


                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/img_work"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/work_90"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_centerVertical="true"
                         android:id="@+id/txt_time"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:00-23:30"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"/>







                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="40dp"
                    android:background="@color/grey_color">
                </View>

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="40dp">


                    <ImageView
                        android:id="@+id/img_offer"
                        android:layout_width="20dp"
                        android:layout_centerVertical="true"
                        android:layout_height="20dp"
                        android:src="@drawable/gift_90"/>

                    <TextView
                        android:id="@+id/txt_offer"
                        android:layout_marginTop="8dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/img_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_avaliable"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"/>


                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/txt_offer"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:text="@string/reserve_Now"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/golden_corner"
                        android:textSize="12sp"
                        android:textColor="@color/golden_color"
                        android:fontFamily="@font/roboto_regular"/>






                </RelativeLayout>



            </LinearLayout>




        </RelativeLayout>









    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
